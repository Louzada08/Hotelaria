@model LZMotel.WebApp.MVC.Models.UsuarioRegistro
@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Local" asp-action="Index">Homel</a></li>
                        <li class="breadcrumb-item active">Usuario</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">

            <div class="container">
                <div class="row">
                    <div class="col-xs-12">

                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover table-condensed">
                                <thead>
                                    <tr class="active">
                                        @*<th>Id</th>*@
                                        <th>Nome Completo</th>
                                        <th>CPF</th>
                                        @*<th>EMAIL</th>*@
                                        <th>Turno</th>
                                        <th>Funcão</th>
                                        <th>Excluido?</th>
                                        <th>Comando</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Clientes.Any())
                                        {
                                            @foreach (var item in Model.Clientes)
                                            {
                                                <tr class="success">
                                                    <td>@item.Nome</td>
                                                    <td>@item.Cpf.Numero</td>
                                                    @*<td>@item.Email</td>*@
                                                    <td>@item.Turno</td>
                                                    <td>@item.Funcao</td>
                                                    <td>
                                                        @if (item.Excluido)
                                                        {
                                                            <span>SIM</span>
                                                        }
                                                        else
                                                        {
                                                            <span>NÃO</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <a asp-action="Editar" asp-route-id="@item.Id">Editar</a> |
                                                        <a asp-action="Excluir" asp-route-id="@item.Id">Excluir</a> |
                                                        <partial name="_Endereco" model="Model" />
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>

                            <partial name="_NovoEndereco" />
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </section>
</div>
@section Scripts {

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
       $(document).ready(function() {
          BuscaCep();
       });
    </script>
}