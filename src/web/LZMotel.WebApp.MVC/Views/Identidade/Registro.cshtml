@model LZMotel.WebApp.MVC.Models.UsuarioRegistro
@{
    ViewData["Title"] = "Registro";
}

@*<div class="content-wrapper">
    <section class="content">
        <div class="tab-pane" id="settings">*@
<section class="section-conten padding-y container" style="min-height: 35vh">
    @*style="max-width: 640px; margin-top: 20px;*@
    <div class="card mx-auto" style="max-width: 640px; margin-top: 5px;">
        <div class="card-body">

            <vc:Summary></vc:Summary>

            <form class="form-horizontal" asp-controller="Identidade" asp-action="Registro"
                  asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

                <div class="form-group row">
                    <label asp-for="Nome"></label>
                    <input asp-for="Nome" class="form-control">
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Cpf"></label>
                        <input asp-for="Cpf" class="form-control" placeholder="CPF">
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6 mb-3">
                        <label asp-for="Turno"></label>
                        <input asp-for="Turno" class="form-control" placeholder="Turno">
                        <span asp-validation-for="Turno" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="Funcao"></label>
                    <select class="form-control" asp-for="Funcao" placeholder="Funcao">
                        <option>ADMINISTRADOR</option>
                        <option>GERENTE</option>
                        <option>ATENDENTE</option>
                    </select>
                    <span asp-validation-for="Funcao" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="Senha"></label>
                    <input type="password" asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="SenhaConfirmacao"></label>
                    <input type="password" asp-for="SenhaConfirmacao" class="form-control" />
                    <span asp-validation-for="SenhaConfirmacao" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="offset-sm-3 col-sm-9">
                        <button type="submit" class="btn btn-primary btn-block">Registrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}