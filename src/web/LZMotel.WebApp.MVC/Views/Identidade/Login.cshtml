@model LZMotel.WebApp.MVC.Models.UsuarioLogin

@{
    Layout = "_Layoutlogin";
    ViewData["Title"] = "Log in";
}
<link href="~/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/Style.css" rel="stylesheet" />

<section>
    <div class="container-fluid no-gutters border">
        <div class="row">

            <div class="col image-login">
                @*<img class="img-fluid" src="~/theme/dist/img/photo1.png" alt="First slide">*@
            </div>
            <div class="col">
                <div class="login-tamanho vertical-center">
                    @*<figure class="figure">
                        <img class="img-fluid" src="~/theme/dist/img/LogoSaude.png" alt="First slide">
                    </figure>*@
                    <div class="text-center">
                        <h1 class="text-primary">LOVEIn</h1>
                        <h4 class="text-primary">Gestão de Motéis</h4>
                        <br />
                        <span><b class="text-primary">Olá! Acesse sua Conta WebAppMotel</b></span>
                        <p></p>
                    </div>
                    <form class="login-form" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

                        <vc:Summary></vc:Summary>

                        <div class="form-group">
                            <label asp-for="Email" class="text-uppercase"></label>
                            <input asp-for="Email" class="form-control" placeholder="email@exemplo.com">
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="Senha"></label>
                            <input type="password" asp-for="Senha" class="form-control" placeholder="Sua senha" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-login float-right">Entrar</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a asp-action="Registro" asp-controller="Identidade">Criar uma conta</a>
                            </p>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
